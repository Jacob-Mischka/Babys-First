<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Event"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|top"
        android:textSize="14pt"
        android:singleLine="false"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/eventEditId"
        android:text="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="10pt"
        android:layout_marginTop="80dp"
        android:layout_marginRight="70dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:id="@+id/enteredDate"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="70dp"
        android:textSize="8pt"
        android:layout_marginLeft="30dp"
        android:editable="false"/>

    <ImageView
        android:layout_width="62dp"
        android:layout_height="46dp"
        android:id="@+id/imageView"
        android:layout_gravity="right|top"
        android:src="@drawable/calendarlogo"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:onClick="showDatePickerDialog"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:layout_marginRight="70dp"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_marginBottom="70dp" />

    <EditText
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:id="@+id/enteredTime"
        android:layout_gravity="center"
        android:layout_marginBottom="74dp"
        android:layout_marginLeft="30dp"
        android:editable="false"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:id="@+id/imageView2"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/calendarlogo"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:onClick="showTimePickerDialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recurring:"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:layout_marginRight="90dp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_gravity="center"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="50dp" />

    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Image:"
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="75dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />
        -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description:"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="95dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:id="@+id/eventDescription"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="40dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="cancelEventClick"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="deleteScheduleEvent"
        android:text="Delete"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="editScheduleEvent"
        android:layout_weight="1"/>

    </LinearLayout>



</FrameLayout>